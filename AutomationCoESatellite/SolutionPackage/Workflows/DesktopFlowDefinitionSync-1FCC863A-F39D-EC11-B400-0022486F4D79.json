              "item/autocoe_desktopflowurl": "@{parameters('Desktop Flows Base URL (autocoe_DesktopFlowsBaseURL)')}@{workflow()['tags']['environmentName']}/uiflows/@{triggerOutputs()?['body/workflowid']}/details",
